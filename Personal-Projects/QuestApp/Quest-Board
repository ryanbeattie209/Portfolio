<body>
    <div class="stars" id="stars"></div>
    
    <div class="container">
        <!-- Stats Card -->
        <div class="stats-card">
            <div class="stats-header">
                <div class="level-info">
                    <div class="crown-icon">üëë</div>
                    <div class="level-text">
                        <h2 id="level">Level 1</h2>
                        <div class="hero-rank" id="heroRank">Squire</div>
                    </div>
                </div>
                <div class="stats-right">
                    <div class="stat-item">
                        <div class="stat-value">
                            <span>üèÜ</span>
                            <span id="coins">0</span>
                        </div>
                        <div class="stat-label">Coins</div>
                    </div>
                    <div class="stat-item">
                        <div class="stat-value">
                            <span>üî•</span>
                            <span id="streak">0</span>
                        </div>
                        <div class="stat-label">Streak</div>
                    </div>
                </div>
            </div>
            <div class="xp-bar">
                <div class="xp-fill" id="xpFill" style="width: 0%"></div>
            </div>
            <div class="xp-text" id="xpText">0 / 100 XP</div>
        </div>

        <!-- Tabs -->
        <div class="tabs">
            <button class="tab active" onclick="switchTab('active')">‚öîÔ∏è Active Quests</button>
            <button class="tab" onclick="switchTab('completed')">üèÜ Completed</button>
        </div>

        <!-- Filter Chips -->
        <div class="filter-chips">
            <button class="chip active" onclick="setFilter('all')">All Quests</button>
            <button class="chip common" onclick="setFilter('common')">Common</button>
            <button class="chip rare" onclick="setFilter('rare')">Rare</button>
            <button class="chip epic" onclick="setFilter('epic')">Epic</button>
            <button class="chip legendary" onclick="setFilter('legendary')">Legendary</button>
        </div>

        <!-- Add Task Card -->
        <div class="add-task-card">
            <div class="input-row">
                <input type="text" class="task-input" id="taskInput" placeholder="Enter your quest..." onkeypress="handleEnter(event)">
                <button class="add-btn" onclick="addTask()">+</button>
            </div>
            
            <div class="selector-label">Quest Rank:</div>
            <div class="selector-row">
                <button class="selector-btn common active" onclick="setDifficulty('common')">Common<br><small>+10 XP</small></button>
                <button class="selector-btn rare" onclick="setDifficulty('rare')">Rare<br><small>+25 XP</small></button>
                <button class="selector-btn epic" onclick="setDifficulty('epic')">Epic<br><small>+50 XP</small></button>
                <button class="selector-btn legendary" onclick="setDifficulty('legendary')">Legendary<br><small>+100 XP</small></button>
            </div>
            
            <div class="selector-label">Time Period:</div>
            <div class="time-selector">
                <button class="time-btn active" onclick="setTimePeriod('today')">‚òÄÔ∏è<div class="time-label">Today</div></button>
                <button class="time-btn" onclick="setTimePeriod('week')">üìÖ<div class="time-label">This Week</div></button>
                <button class="time-btn" onclick="setTimePeriod('month')">üóìÔ∏è<div class="time-label">This Month</div></button>
                <button class="time-btn" onclick="setTimePeriod('someday')">‚è≥<div class="time-label">Someday</div></button>
            </div>
        </div>

        <!-- Streak Bonus Alert -->
        <div id="streakBonus" class="streak-bonus" style="display: none;">
            <strong>üî• One more quest for a +25 coin streak bonus!</strong>
        </div>

        <!-- Tasks List -->
        <div class="tasks-list" id="tasksList"></div>
    </div>

    <script>
        // Hero Ranks
        const heroRanks = {
            1: 'Squire', 5: 'Apprentice', 10: 'Warrior', 20: 'Knight',
            35: 'Elite Knight', 50: 'Champion', 75: 'Master', 100: 'Grand Master',
            150: 'Legend', 200: 'Epic Hero', 300: 'Mythic Champion', 400: 'Dragon Slayer',
            500: 'Titan', 650: 'Demi-God', 800: 'God of War', 1000: 'Hero of the Universe'
        };

        const difficulties = {
            common: { xp: 10, coins: 5 },
            rare: { xp: 25, coins: 15 },
            epic: { xp: 50, coins: 30 },
            legendary: { xp: 100, coins: 60 }
        };

        const timePeriods = {
            today: '‚òÄÔ∏è Today',
            week: 'üìÖ This Week',
            month: 'üóìÔ∏è This Month',
            someday: '‚è≥ Someday'
        };

        let state = {
            tasks: JSON.parse(localStorage.getItem('tasks') || '[]'),
            xp: parseInt(localStorage.getItem('xp') || '0'),
            level: parseInt(localStorage.getItem('level') || '1'),
            coins: parseInt(localStorage.getItem('coins') || '0'),
            streak: parseInt(localStorage.getItem('streak') || '0'),
            currentTab: 'active',
            currentFilter: 'all',
            selectedDifficulty: 'common',
            selectedTimePeriod: 'today'
        };

        // Initialize
        createStars();
        updateStats();
        renderTasks();

        function createStars() {
            const stars = document.getElementById('stars');
            for (let i = 0; i < 20; i++) {
                const star = document.createElement('div');
                star.className = 'star';
                star.style.left = Math.random() * 100 + '%';
                star.style.top = Math.random() * 100 + '%';
                star.style.animationDelay = Math.random() * 3 + 's';
                stars.appendChild(star);
            }
        }

        function getHeroRank(level) {
            const ranks = Object.keys(heroRanks).map(Number).sort((a, b) => b - a);
            for (let rank of ranks) {
                if (level >= rank) return heroRanks[rank];
            }
            return 'Squire';
        }

        function updateStats() {
            document.getElementById('level').textContent = 'Level ' + state.level;
            document.getElementById('heroRank').textContent = getHeroRank(state.level);
            document.getElementById('coins').textContent = state.coins;
            document.getElementById('streak').textContent = state.streak;
            
            const xpToNext = state.level * 100;
            const currentXp = state.xp % 100;
            const progress = (currentXp / xpToNext) * 100;
            
            document.getElementById('xpFill').style.width = progress + '%';
            document.getElementById('xpText').textContent = currentXp + ' / ' + xpToNext + ' XP';
            
            // Streak bonus alert
            const streakBonus = document.getElementById('streakBonus');
            if (state.streak > 0 && state.streak % 5 === 4) {
                streakBonus.style.display = 'block';
            } else {
                streakBonus.style.display = 'none';
            }
            
            saveState();
        }

        function addTask() {
            const input = document.getElementById('taskInput');
            const text = input.value.trim();
            
            if (!text) return;
            
            const task = {
                id: Date.now(),
                text: text,
                difficulty: state.selectedDifficulty,
                timePeriod: state.selectedTimePeriod,
                completed: false,
                timestamp: Date.now()
            };
            
            state.tasks.push(task);
            input.value = '';
            saveState();
            renderTasks();
        }

        function handleEnter(event) {
            if (event.key === 'Enter') addTask();
        }

        function completeTask(id) {
            const task = state.tasks.find(t => t.id === id);
            if (!task || task.completed) return;
            
            task.completed = true;
            
            const reward = difficulties[task.difficulty];
            state.xp += reward.xp;
            state.coins += reward.coins;
            state.streak += 1;
            
            // Check for level up
            const xpToNext = state.level * 100;
            if (state.xp >= xpToNext) {
                state.level += 1;
                triggerConfetti();
            }
            
            // Streak bonus
            if (state.streak % 5 === 0) {
                state.coins += 25;
                alert('üî• Streak Bonus! +25 coins!');
            }
            
            updateStats();
            renderTasks();
        }

        function deleteTask(id) {
            state.tasks = state.tasks.filter(t => t.id !== id);
            saveState();
            renderTasks();
        }

        function switchTab(tab) {
            state.currentTab = tab;
            document.querySelectorAll('.tab').forEach(t => t.classList.remove('active'));
            event.target.classList.add('active');
            renderTasks();
        }

        function setFilter(filter) {
            state.currentFilter = filter;
            document.querySelectorAll('.filter-chips .chip').forEach(c => c.classList.remove('active'));
            event.target.classList.add('active');
            renderTasks();
        }

        function setDifficulty(diff) {
            state.selectedDifficulty = diff;
            document.querySelectorAll('.selector-btn').forEach(b => b.classList.remove('active'));
            event.target.classList.add('active');
        }

        function setTimePeriod(period) {
            state.selectedTimePeriod = period;
            document.querySelectorAll('.time-btn').forEach(b => b.classList.remove('active'));
            event.target.classList.add('active');
        }

        function renderTasks() {
            const container = document.getElementById('tasksList');
            let tasks = state.tasks.filter(t => 
                state.currentTab === 'active' ? !t.completed : t.completed
            );
            
            if (state.currentFilter !== 'all') {
                tasks = tasks.filter(t => t.difficulty === state.currentFilter);
            }
            
            if (tasks.length === 0) {
                container.innerHTML = `
                    <div class="empty-state">
                        <div class="icon">${state.currentTab === 'active' ? '‚öîÔ∏è' : 'üèÜ'}</div>
                        <p>No ${state.currentFilter !== 'all' ? state.currentFilter : ''} quests found</p>
                    </div>
                `;
                return;
            }
            
            container.innerHTML = tasks.map(task => {
                const reward = difficulties[task.difficulty];
                return `
                    <div class="task-card ${task.difficulty} ${task.completed ? 'completed' : ''}">
                        <button class="complete-btn ${task.completed ? 'completed' : ''}" 
                                onclick="completeTask(${task.id})" 
                                ${task.completed ? 'disabled' : ''}>
                            ${task.completed ? '‚úì' : ''}
                        </button>
                        <div class="task-content">
                            <div class="task-text ${task.completed ? 'completed' : ''}">${task.text}</div>
                            <div class="task-meta">
                                <span class="difficulty-badge ${task.difficulty}">${task.difficulty.toUpperCase()}</span>
                                <span>${timePeriods[task.timePeriod]}</span>
                                <span class="task-rewards">‚ö° +${reward.xp} XP ‚Ä¢ üèÜ +${reward.coins}</span>
                            </div>
                        </div>
                        <button class="delete-btn" onclick="deleteTask(${task.id})">üóëÔ∏è</button>
                    </div>
                `;
            }).join('');
        }

        function triggerConfetti() {
            for (let i = 0; i < 50; i++) {
                setTimeout(() => {
                    const confetti = document.createElement('div');
                    confetti.className = 'confetti';
                    confetti.style.left = Math.random() * 100 + '%';
                    confetti.style.background = ['#FFC107', '#A855F7', '#3B82F6', '#EF4444'][Math.floor(Math.random() * 4)];
                    document.body.appendChild(confetti);
                    setTimeout(() => confetti.remove(), 2000);
                }, i * 30);
            }
        }

        function saveState() {
            localStorage.setItem('tasks', JSON.stringify(state.tasks));
            localStorage.setItem('xp', state.xp);
            localStorage.setItem('level', state.level);
            localStorage.setItem('coins', state.coins);
            localStorage.setItem('streak', state.streak);
        }
    </script>
</body>
</html>
