        }

        @keyframes pulse-glow {
            0%, 100% { box-shadow: 0 0 10px rgba(255, 152, 0, 0.3); }
            50% { box-shadow: 0 0 20px rgba(255, 152, 0, 0.6); }
        }

        .confetti {
            position: fixed;
            width: 10px;
